{
    "extends": "./tsconfig-checks.json",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true, // TODO should be removed when will be removed mocks
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"]
}
